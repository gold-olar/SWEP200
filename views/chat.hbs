<style>
    .grid-container {
    display: grid;
    grid-template-columns: 240px 1fr;
    grid-template-rows: 50px 1fr 50px;
    grid-template-areas:
      "sidenav header"
      "sidenav main"
      "sidenav footer";
    height: 100vh;
  }

  /* Give every child element its grid name */


  .main {
    grid-area: main;
    height: 100%;
  }
  header{
      display: none !important;
  }
    .sidenav {
        display: flex; /* Will be hidden on mobile */
        flex-direction: column;
        grid-area: sidenav;
        background-color: #05203b;
      }

      .sidenav__list {
        padding: 0;
        margin-top: 85px;
        list-style-type: none;
      }

      .sidenav__list-item {
        padding: 20px 20px 20px 40px;
        color: #ddd;
      }

      .sidenav__list-item:hover {
        background-color: rgba(255, 255, 255, 0.2);
        cursor: pointer;
      }

      .main-header {
        /* display: flex; */
        justify-content: space-between;
        margin: 5px;
        margin-left: 15%;
        padding: 20px;
        width: 60%;
        border-radius: 15px;
        background-color: #f1f1f1;
        color: slategray;
      }

      .main-overview {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(265px, 1fr)); /* Where the magic happens */
        grid-auto-rows: 94px;
        grid-gap: 20px;
        margin: 20px;
      }

      .overviewcard {
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 20px;
        background-color: #d3d3;
      }



      .card {
        display: flex;
        flex-direction: column;
        align-items: center;
        width: 100%;
        background-color: #82bef6;
        margin-bottom: 20px;
        -webkit-column-break-inside: avoid;
        padding: 24px;
        box-sizing: border-box;
      }

      .logo {
        border-radius: 50%;
        height: 70px;
        width: auto;
        margin-left: 10%;
        vertical-align: middle;
        margin-right: 10px;
      }
      .logo h3{
          font-size: 170%;
      }
      .caption {
          font-size: 15px;
          color: #fff;
          display: block;
          width: 100%;
         margin-left: 15%;
      }
     .top-icon a {
        margin: 10px;
        margin-left: 75%;
        padding: 20px;
        height: 50px; /* Force our height since we don't have actual content yet */
        width: 10%;
        font-size: 30px;
        text-decoration: none;
        color: #05203b;

     }
     .side-head {
         margin-bottom: 30px;
     }

     .icon-small {
         margin-right: 10px;
     }
     .header-main {
         width: 100%;
     }
     .main-img-capt {
        margin-right: 20%;
        width: 90%;
     }
     .main-img {
        width: auto;
        height: 40px;
        vertical-align: middle;
        border-radius: 50%;
        border: 1px solid #05203b;
        margin-right: 10px;
     }
     .time {
         font-size: 12px;
     }
     .ann p{
         margin-top: 10px;
         margin-bottom: 10px;
         font-size: 13px;

     }
     .border {
         width: 100%;
         border-bottom: 1px solid #05203b;
     }
